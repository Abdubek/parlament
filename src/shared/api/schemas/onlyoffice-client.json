      "FilestoreMetadataDto": {
        "type": "object",
        "properties": {
          "fileName": {
            "type": "string"
          },
          "fileUid": {
            "type": "string"
          },
          "bucketName": {
            "type": "string"
          },
          "directoryName": {
            "type": "string"
          },
          "contentType": {
            "type": "string"
          },
          "downloadLink": {
            "type": "string"
          },
          "metadataLink": {
            "type": "string"
          },
          "fileSize": {
            "type": "integer",
            "format": "int64"
          },
          "lastModified": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "FilestoreContentResponseDto": {
        "type": "object",
        "properties": {
          "content": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FilestoreMetadataDto"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
