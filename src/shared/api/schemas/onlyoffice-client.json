    "/api/v1/templates/{type}/items": {
      "get": {
        "tags": ["Templates controller"],
        "description": "Получить список шаблонов по типу корреспонденции",
        "operationId": "listPath",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "description": "тип корреспонденции - outbox, innerbox",
            "required": true,
            "schema": {
              "type": "string"
            }
