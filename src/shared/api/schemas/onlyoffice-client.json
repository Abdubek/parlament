    "/api/v1/templates/{type}/items/{fileUid}/generate": {
      "post": {
        "tags": ["Templates controller"],
        "description": "Сгенерировать документа по шаблону с параметрами, по типу корреспонденции",
        "operationId": "generateFromTemplate",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "description": "тип корреспонденции - outbox, innerbox",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "fileUid",
            "in": "path",
            "description": "uid файла шаблона",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json;charset=UTF-8": {
                "schema": {
                  "$ref": "#/components/schemas/FilestoreMetadataDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        },
        "security": [
          {
            "swagger-oauth2": []
          }
        ]
      }
    },
