  "components": {
    "schemas": {
      "ApiError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        }
      },
      "Action": {
        "type": "object",
        "properties": {
          "userid": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "edit",
              "review",
              "view",
              "embedded",
              "filter",
              "comment",
              "chat",
              "fillForms",
              "blockcontent"
            ]
          }
        }
      },
      "ChangesHistory": {
        "type": "object",
        "properties": {
          "documentSha256": {
            "type": "string"
          },
          "created": {
            "type": "string"
          },
          "user": {
            "$ref": "#/components/schemas/ChangesUser"
          }
        }
      },
      "ChangesUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "History": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "version": {
            "type": "integer",
            "format": "int32"
          },
          "created": {
            "type": "string"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          },
          "changes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ChangesHistory"
            }
          },
          "serverVersion": {
            "type": "string"
          }
        }
      },
      "Track": {
        "type": "object",
        "properties": {
          "filetype": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "changesurl": {
            "type": "string"
          },
          "history": {
            "$ref": "#/components/schemas/History"
          },
          "token": {
            "type": "string"
          },
          "forcesavetype": {
            "type": "integer",
            "format": "int32"
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "users": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "actions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Action"
            }
          },
          "userdata": {
            "type": "string"
          },
          "lastsave": {
            "type": "string"
          },
          "notmodified": {
            "type": "boolean"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "group": {
            "type": "string"
          }
        }
      },
      "JSONObject": {
        "type": "object",
        "properties": {
          "empty": {
            "type": "boolean"
          }
        },
        "additionalProperties": {
          "type": "object"
        }
      },
      "Converter": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string"
          },
          "filePass": {
            "type": "string"
          },
          "lang": {
            "type": "string"
          }
        }
